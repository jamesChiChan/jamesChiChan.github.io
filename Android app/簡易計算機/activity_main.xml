<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_num5"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:text="5"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num1"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_above="@id/button_num5"
        android:layout_toLeftOf="@id/button_num5"
        android:text="1"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_above="@id/button_num5"
        android:layout_toRightOf="@id/button_num1"
        android:text="2"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num3"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_above="@id/button_num5"
        android:layout_toRightOf="@id/button_num2"
        android:text="3"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num4"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num1"
        android:layout_toLeftOf="@id/button_num5"
        android:text="4"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num6"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num3"
        android:layout_toRightOf="@id/button_num5"
        android:text="6"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num7"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num5"
        android:layout_toLeftOf="@id/button_num5"
        android:text="7"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num8"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num5"
        android:layout_toRightOf="@id/button_num7"
        android:text="8"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num9"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num5"
        android:layout_toRightOf="@id/button_num8"
        android:text="9"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_num0"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num8"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_dot"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num8"
        android:layout_toRightOf="@id/button_num0"
        android:layout_centerInParent="true"
        android:text="."
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_epual"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_above="@id/button_num3"
        android:layout_toRightOf="@id/button_num2"
        android:layout_centerInParent="true"
        android:text="="
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num8"
        android:layout_toLeftOf="@id/button_num0"
        android:layout_centerInParent="true"
        android:text="C"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_plus"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num0"
        android:layout_marginLeft="65dp"
        android:text="+"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_divide"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_plus"
        android:layout_marginLeft="195dp"
        android:text="/"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_plus"
        android:layout_marginLeft="65dp"
        android:text="*"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/button_subtract"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/button_num0"
        android:layout_marginLeft="195dp"
        android:text="-"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/input_num"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_above="@id/button_num2"
        android:layout_centerInParent="true"
        android:inputType="numberDecimal"
        android:textSize="30dp"
        android:maxLines="1"
        />
</RelativeLayout>